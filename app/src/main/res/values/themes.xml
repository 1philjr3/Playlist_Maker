<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Playlist_Maker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Base.Theme.Apps" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorAccent">@color/color_primary</item>
        <item name="colorPrimary">#FF4682B4</item>
        <item name="colorPrimaryDark">@color/color_primary</item>

    </style>

    <style name="Theme.Apps" parent="Base.Theme.Apps" />

</resources>